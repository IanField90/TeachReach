<h1><%= t('user.signup') %></h1>

<%= form_for @user, :html => { :class => "form-stacked" } do |f|  %>
	<% if @user.errors.any? %>
	<div class="alert-message block-message error">
		<p>
			<strong>Form <%= t('errors.messages.invalid')%>!</strong>
		</p>
		<ul>
			<% for message in @user.errors.full_messages %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="clearfix">
		<%= f.label :email, t('user.email') %>
		<div class="input">
			<%= f.text_field :email %>
		</div>
	</div>
	<div class="clearfix">
		<%= f.label :password, t('user.password') %>
		<div class="input">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="clearfix">
		<%= f.label :password_confirmation, t('user.password_confirm') %>
		<div class="input">
			<%= f.password_field :password_confirmation%>
		</div>
	</div>
	<div class="actions"><%= f.submit :class => "btn btn-primary", :value => 'Sign up' %></div>
<% end %>